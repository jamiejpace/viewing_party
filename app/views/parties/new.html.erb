<%= f.label :movie_title, value: params[:movie_title] %> <br>
<%= f.label :date, "Party Date:" %>
<%= f.date_field :date, min: Date.today %> <br>
<%= f.label :runtime, "Movie Runtime:" %>
<%= f.number_field :runtime, min: params[:runtime], max: 360, value: params[:runtime] %> <br>
<%= f.label :party_time, "Party Time:" %>
<%= f.time_select :party_time, {minute_step: 15, ampm: true} %> <br>
<br>
