<div id="header">
  <h1 style="text-align: center">Welcome to Viewing Party!</h1>
</div>

<div id="welcome-message">
  <h4 style="text-align: center">Viewing Party is an application in which users can explore movie options and create a viewing party event for the user and friends.</h4>
</div>

<div id="login-form">
  <center>
    <br>
  <%= form_with url: login_path, method: :post, local: true do |f| %>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %><br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br>
  <%= f.submit "Log In" %>
  <% end %>
  <br>
  <%= link_to "Register for an Account", registration_path %>
  </center>
</div>
