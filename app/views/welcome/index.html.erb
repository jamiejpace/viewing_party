<div id="header">
  <h1 style="text-align: center">Welcome to Viewing Party!</h1>
</div>

<div id="welcome-message">
  <h5 style="text-align: center">An app to explore new movies and enjoy them with your friends</h5>
</div>

<div id="login-form">
  <center>
    <br>
  <%= form_with url: login_path, method: :post, local: true do |f| %>
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %><br><br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br><br>
  <%= f.submit "Log In", :class => 'btn'  %>
  <% end %>
  <br>
  <%= link_to "Register for an Account", registration_path %>
  </center>
</div>
